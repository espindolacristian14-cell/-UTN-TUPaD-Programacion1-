#ejercicio4
def programa_contactos():
    "permite al usuario agregar 5 contactos a una agenda y mostrarlos"
    print("-----carga de 5 contactos-----")
    for i in range(5):
        nombre= input("ingresa el nombre del contacto {i+1}: ")
        numero= input("ingresa el numero del contacto para {nombre}: ")
        contactos=[nombre]= numero
        print(f"contacto {nombre} agregado.")
    print("-----lista de contactos-----")
    nombre_a_consultar= input("ingresa el nombre del contacto que deseas consultar: ")
    if nombre_a_consultar in contactos:
        numero_encontrado= contactos[nombre_a_consultar]
        print(f"el n칰mero de {nombre_a_consultar} es: {numero_encontrado}")
    else:
        print(f"el contacto {nombre_a_consultar} no se encuentra en la agenda.")

#ejercicio5
def analizar_frase():
    """Solicita una frase al usuario y calcula palabras 칰nicas y su frecuencia."""
    
    print("--- 游늵 An치lisis de Frase ---")
    # Paso 1: Solicitar la frase al usuario
    frase_entrada = input("Ingrese una frase: ")
    
    # Limpiar y dividir la frase en una lista de palabras
    # Convertimos a min칰sculas y eliminamos signos de puntuaci칩n simples
    palabras = frase_entrada.lower().replace('.', '').replace(',', '').split()
    
    # --- Resultado 1: Palabras 칰nicas (usando un set) ---
    # Un set elimina autom치ticamente los duplicados
    palabras_unicas = set(palabras)
    
    print("\nPalabras 칔nicas (Set):")
    print(f"칔nicas: {palabras_unicas}")
    
    # --- Resultado 2: Conteo de palabras (usando un diccionario) ---
    # Opci칩n 1 (Manual - Fundamental para el TP):
    recuento_manual = {}
    for palabra in palabras:
        # Si la palabra ya est치, sumamos 1; si no, la inicializamos en 1
        recuento_manual[palabra] = recuento_manual.get(palabra, 0) + 1
        
    print("\nRecuento (Diccionario Manual):")
    print(f"Recuento: {recuento_manual}")

    # Opci칩n 2 (Con Counter - M치s pythonic):
    # recuento_counter = Counter(palabras)
    # print("\nRecuento (Diccionario con Counter):")
    # print(f"Recuento: {dict(recuento_counter)}")

# Ejecutar el programa
# analizar_frase()

#ejercicio6
def calcular_promedios_alumnos():
    """Permite ingresar nombres y 3 notas para calcular el promedio."""
    
    # El diccionario para almacenar los datos (nombre: (nota1, nota2, nota3))
    alumnos = {}
    
    print("--- Ingreso de Notas de 3 Alumnos ---")
    
    # Pedir los datos para 3 alumnos
    for i in range(3):
        nombre = input(f"Ingrese el nombre del alumno {i+1}: ")
        
        try:
            # Pedir las 3 notas como cadena y convertir a tupla de enteros
            notas_str = input(f"Ingrese 3 notas para {nombre} separadas por coma (ej: 8,9,10): ")
            # Convertir la cadena de notas a una tupla de enteros
            notas = tuple(map(int, notas_str.split(',')))
            
            if len(notas) != 3:
                print("Error: Debe ingresar exactamente 3 notas. Intente de nuevo.")
                continue # Saltar al siguiente alumno si hay error en la cantidad de notas
                
            alumnos[nombre] = notas
            
        except ValueError:
            print("Error: Aseg칰rese de ingresar n칰meros v치lidos separados por coma.")
            continue
            
    print("\n--- Promedios de los Alumnos ---")
    
    # Recorrer el diccionario y calcular el promedio
    for nombre, notas in alumnos.items():
        # Sumar los elementos de la tupla y dividir por el n칰mero de elementos
        promedio = sum(notas) / len(notas)
        # Mostrar el promedio con dos decimales
        print(f"El promedio de *{nombre}* ({notas}) es: *{promedio:.2f}*")

# Ejecutar el programa
calcular_promedios_alumnos()


#ejercicio7
def analizar_aprobados():
    """Realiza operaciones de conjuntos para analizar los estudiantes que aprobaron Parcial 1 y Parcial 2."""
    
    # Definici칩n de los sets de estudiantes que aprobaron cada parcial
    parcial_1 = {'Juan', 'Ana', 'Luis', 'Sof칤a', 'Pedro'}
    parcial_2 = {'Ana', 'Pedro', 'Carlos', 'Sof칤a', 'Mart칤n'}

    print("--- 游늵 An치lisis de Aprobados (Sets) ---")
    print(f"Aprobaron Parcial 1: {parcial_1}")
    print(f"Aprobaron Parcial 2: {parcial_2}")
    
    # 1. Mostrar los que aprobaron ambos parciales (INTERSECCI칍N)
    # Usamos la operaci칩n de intersecci칩n (&)
    ambos_parciales = parcial_1.intersection(parcial_2) # o parcial_1 & parcial_2
    print("\n1. Aprobaron *ambos parciales* (Intersecci칩n):")
    print(f"Resultado: {ambos_parciales}")
    
    # 2. Mostrar los que aprobaron solo uno de los dos (DIFERENCIA SIM칄TRICA)
    # La diferencia sim칠trica (^) incluye los elementos que est치n en A o en B, pero no en ambos.
    solo_uno = parcial_1.symmetric_difference(parcial_2) # o parcial_1 ^ parcial_2
    print("\n2. Aprobaron *solo uno de los dos* (Diferencia Sim칠trica):")
    print(f"Resultado: {solo_uno}")
    
    # 3. Mostrar la lista total de estudiantes que aprobaron al menos un parcial (UNI칍N)
    # La uni칩n (|) combina todos los elementos de ambos sets, eliminando duplicados.
    al_menos_uno = parcial_1.union(parcial_2) # o parcial_1 | parcial_2
    print("\n3. Aprobaron *al menos un parcial* (Uni칩n - Sin repetir):")
    print(f"Resultado: {al_menos_uno}")
    
    # Convertir el set a lista para cumplir con el requisito de "Mostrar la lista total"
    lista_al_menos_uno = list(al_menos_uno)
    print(f"Lista Total de Aprobados: {lista_al_menos_uno}")

# Ejecutar el programa
analizar_aprobados()

#ejercicio8
def gestionar_inventario():
    """Permite consultar, agregar y actualizar el stock de productos."""
    
    # Inicializar el diccionario de inventario
    inventario = {
        'Monitor': 15,
        'Teclado': 50,
        'Mouse': 25
    }
    
    print("--- 游 Gesti칩n de Inventario ---")
    
    while True:
        print("\nOpciones:")
        print("1. Consultar stock")
        print("2. Agregar/Actualizar stock")
        print("3. Salir")
        
        opcion = input("Ingrese el n칰mero de la opci칩n deseada: ")
        
        if opcion == '1':
            # Consultar el stock de un producto ingresado
            producto = input("Ingrese el nombre del producto a consultar: ")
            
            stock = inventario.get(producto, None)
            
            if stock is not None:
                print(f"El stock actual de *{producto}* es: *{stock}*")
            else:
                print(f"El producto '{producto}' no existe en el inventario.")
                
        elif opcion == '2':
            # Agregar o actualizar unidades
            producto = input("Ingrese el nombre del producto: ")
            
            try:
                unidades = int(input("Ingrese la cantidad de unidades a agregar (puede ser negativo para restar): "))
            except ValueError:
                print("Cantidad inv치lida. Intente de nuevo.")
                continue
                
            if producto in inventario:
                # Si existe, actualiza el stock
                inventario[producto] += unidades
                print(f"Stock de '{producto}' actualizado. Nuevo stock: {inventario[producto]}")
            else:
                # Si no existe, agrega el nuevo producto
                inventario[producto] = unidades
                print(f"Producto '{producto}' agregado con stock inicial: {unidades}")
                
        elif opcion == '3':
            print("Saliendo de la gesti칩n de inventario. Inventario final:", inventario)
            break
            
        else:
            print("Opci칩n no v치lida. Intente con 1, 2 o 3.")

# Ejecutar el programa
gestionar_inventario()

#ejercicio9
def consultar_agenda():
    """Permite consultar un evento usando una tupla (d칤a, hora) como clave."""
    
    # El diccionario de la agenda, usando tuplas (d칤a, hora) como claves
    agenda = {
        ("lunes", "10:00"): "Reuni칩n de equipo",
        ("martes", "15:00"): "Clase de ingl칠s",
        ("mi칠rcoles", "09:30"): "Entrenamiento",
        ("viernes", "11:00"): "Entrega de proyecto"
    }
    
    print("--- 游늰 Consulta de Agenda ---")
    print("Claves disponibles (ej: lunes, 10:00).")
    
    # 1. Solicitar d칤a y hora al usuario
    dia_consulta = input("Ingrese el d칤a (ej: lunes): ").lower()
    hora_consulta = input("Ingrese la hora (ej: 10:00): ")
    
    # 2. Crear la tupla clave para la consulta
    clave_busqueda = (dia_consulta, hora_consulta)
    
    # 3. Consultar la actividad
    # Usamos .get() para obtener el valor o un mensaje si no se encuentra
    actividad = agenda.get(clave_busqueda, "No hay actividad programada para esta hora.")
    
    print("\n--- Resultado ---")
    if actividad != "No hay actividad programada para esta hora.":
        print(f"El evento programado para el *{dia_consulta.capitalize()} a las {hora_consulta}* es: *{actividad}*")
    else:
        print(f"No hay evento en {dia_consulta.capitalize()} a las {hora_consulta}.")

# Ejecutar el programa
consultar_agenda()

#ejercicio10
def invertir_diccionario_paises():
    """Invierte un diccionario de (Pa칤s: Capital) a (Capital: Pa칤s)."""
    
    # Diccionario original (Pa칤s: Capital)
    original = {
        "Argentina": "Buenos Aires", 
        "Chile": "Santiago", 
        "Uruguay": "Montevideo", 
        "Per칰": "Lima"
    }
    
    # Nuevo diccionario que almacenar치 el resultado (Capital: Pa칤s)
    invertido = {}
    
    # Recorrer el diccionario original. En cada iteraci칩n:
    # 'pais' toma el valor de la clave (ej: "Argentina")
    # 'capital' toma el valor asociado (ej: "Buenos Aires")
    for pais, capital in original.items():
        # Asignar al nuevo diccionario invirtiendo la posici칩n:
        # La 'capital' se convierte en la nueva clave, y el 'pais' en el nuevo valor.
        invertido[capital] = pais
        
    print("--- 游깴 Inversi칩n de Diccionario ---")
    print(f"Diccionario Original: {original}")
    print("-" * 30)
    print(f"Diccionario Invertido: {invertido}")

# Ejecutar el programa
invertir_diccionario_paises()
